{
  "diagnostic.errorSign": "●",
  "diagnostic.infoSign": "•",
  "diagnostic.warningSign": "◆",
  "coc.preferences.colorSupport": false,

  "suggest.echodocSupport": true,
  "suggest.maxCompleteItemCount": 20,

  "explorer.quitOnOpen": true,
  "explorer.width": 30,
  "explorer.keyMappings.global": {
    "<cr>": ["expandable?", ["expanded?", "collapse", "expand"], "open"],
    "s": "open:vsplit",
    "mm": "rename",
    "mx": "cutFile",
    "X": "cutFile",
    "mc": "copyFile",
    "C": "copyFile",
    "md": "delete",
    "D": "delete",
    "ma": "addFile",
    "mA": "addDirectory",
    "O": "systemExecute",
    "mo": "systemExecute"
  },
  "explorer.icon.enableNerdfont": true,
  "explorer.file.hiddenRules": {
    "filenames": ["node_modules", ".git", ".nyc_output", "coverage", "target"],
    "patternMatches": []
  },
  "explorer.git.icon.status.modified": "✹",
  "explorer.buffer.root.template": "[icon & 1] OPEN BUFFERS",
  "explorer.file.root.template": "[icon & 1] PROJECT ([root])",
  "explorer.file.child.template": "[git | 2][selection | clip | 1] [indent][icon | 1] [filename omitCenter 1][modified][readonly]",

  "tsserver.enableJavascript": true,

  "typescript.showUnused": false,
  "javascript.showUnused": false,
  "javascript.suggestionActions.enabled": false,
  "typescript.suggestionActions.enabled": false,

  "diagnostic.messageTarget": "float",
  "diagnostic.checkCurrentLine": true,
  "diagnostic.format": "[%source%code]: %message",

  "prettier.statusItemText": "",
  "prettier.disableSuccessMessage": true,
  "tsserver.formatOnType": true,
  "coc.preferences.formatOnType": true,
  "coc.preferences.formatOnSaveFiletypes": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "html",
    "go",
    "less",
    "css",
    "json",
    "markdown",
    "yaml",
    "rust",
    "php",
    "sql"
  ],

  "rust.clippy_preference": "on",
  "go.goplsOptions": {
    "gofumpt": true
  },

  "eslint.autoFixOnSave": true,
  "eslint.options": {
    "cache": true
  },

  "diagnostic-languageserver.filetypes": {
    "markdown": ["write-good"]
  },

  "languageserver": {
    "golangci-lint-languageserver": {
      "command": "golangci-lint-langserver",
      "filetypes": ["go"],
      "initializationOptions": {
        "command": [
          "golangci-lint",
          "run",
          "--enable",
          "gosec",
          "--disable",
          "lll",
          "--out-format",
          "json"
        ]
      }
    }
  }
}
